<div class="container form">
<h2 class="text-center">Sign in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.input :email, required: false, autofocus: true , class: "form-control"%>
    <%= f.input :password, required: false , class: "form-control"%>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? , class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.button :submit, "Sign in" , class: "form-control"%>
  </div>
<% end %>

<%= render "users/shared/links" %>
</div>